<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoApp.Views.TodoPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:burkus="http://burkus.co.uk"
    xmlns:properties="clr-namespace:DemoApp.Properties"
    xmlns:vm="clr-namespace:DemoApp.ViewModels"
    Title="{x:Static properties:Resources.Todo_Title}"
    x:DataType="vm:TodoViewModel"
    BindingContext="{burkus:ResolveBindingContext x:TypeArguments=vm:TodoViewModel}">
    <ScrollView>
        <Grid
            Margin="15"
            RowDefinitions="*"
            RowSpacing="10">
            <Label
                Grid.Row="0"
                Style="{StaticResource HeadingLabel}"
                Text="{x:Static properties:Resources.Todo_Title}"
                VerticalOptions="CenterAndExpand" />
        </Grid>
    </ScrollView>
</ContentPage>