<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <x:Double x:Key="VeryWideControlWidth">600</x:Double>
    <x:Double x:Key="WideControlWidth">350</x:Double>
    <Style
        x:Key="HyperlinkLabel"
        ApplyToDerivedTypes="True"
        TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Blue100Accent}" />
        <Setter Property="TextDecorations" Value="Underline" />
    </Style>
    <Style
        x:Key="HeadingLabel"
        ApplyToDerivedTypes="True"
        TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>
    <Style
        x:Key="PrimaryButton"
        ApplyToDerivedTypes="True"
        TargetType="Button">
        <Setter Property="MaximumWidthRequest" Value="{StaticResource WideControlWidth}" />
        <Setter Property="Margin" Value="0,20,0,0" />
        <Setter Property="VerticalOptions" Value="Start" />
    </Style>
</ResourceDictionary>
